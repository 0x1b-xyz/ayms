<div class="form-group">
    <label for="text-{{id}}" class="col-sm-2 control-label">Text</label>
    <div class="col-sm-9">
        <input name="text-{{id}}" id="text-{{id}}" type="text" class="form-control" placeholder="Header Text" value="{{text}}">
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label">Size</label>
    <div class="col-sm-9">
        <label class="radio-inline"><input type="radio" name="size-{{id}}" value="1" {{#compare size "1"}}checked{{/compare}}> H1</label>
        <label class="radio-inline"><input type="radio" name="size-{{id}}" value="2" {{#compare size "2"}}checked{{/compare}}> H2</label>
        <label class="radio-inline"><input type="radio" name="size-{{id}}" value="3" {{#compare size "3"}}checked{{/compare}}> H3</label>
        <label class="radio-inline"><input type="radio" name="size-{{id}}" value="4" {{#compare size "4"}}checked{{/compare}}> H4</label>
        <label class="radio-inline"><input type="radio" name="size-{{id}}" value="5" {{#compare size "5"}}checked{{/compare}}> H5</label>
    </div>
</div>

<script type="text/javascript">
    var heights = {'1': 3, '2': 3, '3': 3, '4': 2, '5': 2};
    function append_{{id}}(ctrlId, ctrlType, ctrlData) {
        var height = heights[ctrlData.size];
        return appendCtrl(ctrlId, ctrlType, ctrlData, 0, 50, 20, height)
    }
</script>
