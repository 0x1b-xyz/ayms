{{#compare attr.labelAlign "horizontal"}}
<div class="form-group">
    <label for="{{name}}-value" class="col-sm-2 control-label">{{attr.label}}</label>
    <div class="col-sm-10">
        <div class="input-group">
            <span class="input-group-addon">@</span>
            <input name="{{name}}-value" id="{{name}}-value" type="email" class="form-control" placeholder="{{attr.placeholder}}">
        </div>
    </div>
</div>
{{/compare}}
{{#compare attr.labelAlign "vertical"}}
<div class="form-vertical">
    <label for="{{name}}-value">{{attr.label}}</label>
    <div class="input-group">
        <span class="input-group-addon">@</span>
        <input name="{{name}}-value" id="{{name}}-value" type="email" class="form-control" placeholder="{{attr.placeholder}}">
    </div>
</div>
{{/compare}}
{{#compare attr.labelAlign "none"}}
<div class="input-group">
    <span class="input-group-addon">@</span>
    <input name="{{name}}-value" id="{{name}}-value" type="email" class="form-control" placeholder="{{attr.placeholder}}">
</div>
{{/compare}}