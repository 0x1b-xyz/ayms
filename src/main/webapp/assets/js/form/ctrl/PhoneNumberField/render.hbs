{{#compare attr.labelAlign "horizontal"}}
<div class="form-group">
    <label for="{{name}}-value" class="col-sm-2 control-label">{{attr.label}}</label>
    <div class="col-sm-10">
        <input name="{{name}}-value" id="{{name}}-value" type="text" class="form-control" placeholder="(000) 000-0000">
    </div>
</div>
{{/compare}}
{{#compare labelAlign "vertical"}}
<div class="form-vertical">
    <label for="{{name}}-value">{{attr.label}}</label>
    <input name="{{name}}-value" id="{{name}}-value" type="text" class="form-control" placeholder="(000) 000-0000">
</div>
{{/compare}}