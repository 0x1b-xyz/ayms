{{#compare labelAlign "horizontal"}}
<div class="form-group">
    <label for="{{name}}-{{id}}" class="col-sm-2 control-label">{{label}}</label>
    <div class="col-sm-10">
        <div class="input-group">
            <span class="input-group-addon">@</span>
            <input name="{{name}}" id="{{name}}-{{id}}" type="email" class="form-control" placeholder="{{placeholder}}">
        </div>
    </div>
</div>
{{/compare}}
{{#compare labelAlign "vertical"}}
<div class="form-vertical">
    <label for="{{name}}-{{id}}">{{label}}</label>
    <div class="input-group">
        <span class="input-group-addon">@</span>
        <input name="{{name}}" id="{{name}}-{{id}}" type="email" class="form-control" placeholder="{{placeholder}}">
    </div>
</div>
{{/compare}}