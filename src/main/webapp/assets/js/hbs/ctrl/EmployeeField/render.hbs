{{#compare attr.labelAlign "horizontal"}}
<div class="form-group">
    <label for="{{attr.name}}-{{id}}" class="col-sm-2 control-label">{{attr.label}}</label>
    <div class="col-sm-10">
        <select name="{{attr.name}}" id="{{attr.name}}-{{id}}" class="form-control">
            {{#if attr.placeholder}}<option value="" disabled selected>{{attr.placeholder}}</option>{{/if}}
        </select>
    </div>
</div>
{{/compare}}
{{#compare attr.labelAlign "vertical"}}
<div class="form-vertical">
    <label for="{{attr.name}}-{{id}}">{{attr.label}}</label>
    <select name="{{attr.name}}" id="{{attr.name}}-{{id}}" class="form-control">
        {{#if attr.placeholder}}<option value="" disabled selected>{{attr.placeholder}}</option>{{/if}}
    </select>
</div>
{{/compare}}
{{#compare attr.labelAlign "none"}}
<select name="{{attr.name}}" id="{{attr.name}}-{{id}}" class="form-control">
    {{#if attr.placeholder}}<option value="" disabled selected>{{attr.placeholder}}</option>{{/if}}
</select>
{{/compare}}